---
import ProjectCard from "../components/cards/ProjectCard.astro";
import projectsData from "../data/pages/Projects.json";
import type { ProjectsData, Project } from "../types/projects-page.data";

import WebPageBaseLayout from "../layouts/WebPageBaseLayout.astro";

const typedProjectsData = projectsData as ProjectsData;

// Separate featured and regular projects
const featuredProjects: Project[] = typedProjectsData.projects.filter(
  (p) => p.featured
);
const regularProjects: Project[] = typedProjectsData.projects.filter(
  (p) => !p.featured
);
---

<WebPageBaseLayout
  title="Projects - Syed Vilayat Ali Rizvi"
  description="Explore my portfolio of software engineering and machine learning projects. From production ML pipelines to distributed systems."
>
  <!-- Neural network background canvas -->
  <canvas
    id="neuralCanvas"
    class="fixed top-0 left-0 w-full h-full opacity-30 pointer-events-none -z-10"
  ></canvas>

  <div class="relative z-10 max-w-6xl mx-auto px-6 py-12 md:py-20">
    <!-- Header Section -->
    <header class="mb-16">
      <div
        class="inline-block px-4 py-1.5 bg-blue-600/20 border border-blue-500/30 rounded-full text-sm text-blue-400 font-mono mb-6"
      >
        Portfolio
      </div>

      <h1 class="text-4xl md:text-5xl font-semibold mb-6 leading-tight">
        Things I've <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500"
          >built</span
        >
      </h1>

      <p class="text-xl text-gray-400 max-w-3xl leading-relaxed">
        A collection of projects spanning machine learning, distributed systems,
        and full-stack development. Each one taught me something new—some are in
        production, others are experiments that pushed boundaries.
      </p>
    </header>

    <!-- Featured Projects -->
    {
      featuredProjects.length > 0 && (
        <section class="mb-20">
          <h2 class="text-2xl font-semibold mb-8 text-gray-300 flex items-center gap-3">
            <span class="w-2 h-2 bg-blue-500 rounded-full" />
            Featured Projects
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {featuredProjects.map((project: any) => (
              <ProjectCard
                title={project.title}
                description={project.description}
                tags={project.tags}
                githubUrl={project.githubUrl}
                liveUrl={project.liveUrl}
              />
            ))}
          </div>
        </section>
      )
    }

    <!-- All Projects -->
    <section>
      <h2
        class="text-2xl font-semibold mb-8 text-gray-300 flex items-center gap-3"
      >
        <span class="w-2 h-2 bg-purple-500 rounded-full"></span>
        All Projects
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          regularProjects.map((project: any) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              tags={project.tags}
              githubUrl={project.githubUrl}
              liveUrl={project.liveUrl}
            />
          ))
        }
      </div>
    </section>

    <!-- CTA Section -->
    <section class="mt-20">
      <div
        class="bg-gradient-to-r from-blue-900/30 to-purple-900/30 border border-blue-500/30 rounded-lg p-8 md:p-10 text-center"
      >
        <h2 class="text-2xl md:text-3xl font-semibold mb-4">
          Want to collaborate?
        </h2>
        <p class="text-gray-400 mb-8 max-w-2xl mx-auto leading-relaxed">
          I'm always interested in working on challenging problems. Whether it's
          ML research, system architecture, or building something from
          scratch—let's chat.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="mailto:your.email@example.com"
            class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors duration-200 font-medium"
          >
            Get in touch
          </a>
          <a
            href="https://github.com/yourusername"
            target="_blank"
            rel="noopener noreferrer"
            class="px-6 py-3 bg-gray-800 hover:bg-gray-700 border border-gray-700 rounded-lg transition-colors duration-200 font-medium"
          >
            View GitHub
          </a>
        </div>
      </div>
    </section>
  </div>

  <script>
    const canvas = document.getElementById("neuralCanvas") as HTMLCanvasElement;
    const ctx = canvas.getContext("2d")!;
    if (!ctx) throw new Error("Canvas context not found");

    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const nodes: {
      x: number;
      y: number;
      vx: number;
      vy: number;
      radius: number;
    }[] = [];
    const nodeCount = 40;
    const connectionDistance = 150;

    class Node {
      x: number;
      y: number;
      vx: number;
      vy: number;
      radius: number;

      constructor() {
        this.x = Math.random() * canvas.width;
        this.y = Math.random() * canvas.height;
        this.vx = (Math.random() - 0.5) * 0.5;
        this.vy = (Math.random() - 0.5) * 0.5;
        this.radius = 2;
      }

      update() {
        this.x += this.vx;
        this.y += this.vy;

        if (this.x < 0 || this.x > canvas.width) this.vx *= -1;
        if (this.y < 0 || this.y > canvas.height) this.vy *= -1;
      }

      draw() {
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
        ctx.fillStyle = "#3b82f6";
        ctx.fill();
      }
    }

    for (let i = 0; i < nodeCount; i++) {
      nodes.push(new Node());
    }

    function drawConnections() {
      for (let i = 0; i < nodes.length; i++) {
        for (let j = i + 1; j < nodes.length; j++) {
          const dx = nodes[i].x - nodes[j].x;
          const dy = nodes[i].y - nodes[j].y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < connectionDistance) {
            ctx.beginPath();
            ctx.moveTo(nodes[i].x, nodes[i].y);
            ctx.lineTo(nodes[j].x, nodes[j].y);
            ctx.strokeStyle = `rgba(59, 130, 246, ${1 - distance / connectionDistance})`;
            ctx.lineWidth = 0.5;
            ctx.stroke();
          }
        }
      }
    }

    function animate() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      drawConnections();

      nodes.forEach((node: any) => {
        node.update();
        node.draw();
      });

      requestAnimationFrame(animate);
    }

    animate();

    window.addEventListener("resize", () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });
  </script>
</WebPageBaseLayout>
