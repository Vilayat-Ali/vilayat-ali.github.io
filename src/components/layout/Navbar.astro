<script is:inline>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById("mobileMenuBtn");
  const mobileMenu = document.getElementById("mobileMenu");
  const menuIcon = document.getElementById("menuIcon");
  const closeIcon = document.getElementById("closeIcon");

  mobileMenuBtn.addEventListener("click", () => {
    mobileMenu.classList.toggle("open");
    menuIcon.classList.toggle("hidden");
    closeIcon.classList.toggle("hidden");
  });

  // Mobile research dropdown
  const mobileResearchBtn = document.getElementById("mobileResearchBtn");
  const mobileResearchDropdown = document.getElementById(
    "mobileResearchDropdown"
  );
  const researchChevron = document.getElementById("researchChevron");

  mobileResearchBtn.addEventListener("click", () => {
    const isOpen =
      mobileResearchDropdown.style.maxHeight &&
      mobileResearchDropdown.style.maxHeight !== "0px";

    if (isOpen) {
      mobileResearchDropdown.style.maxHeight = "0px";
      researchChevron.style.transform = "rotate(0deg)";
    } else {
      mobileResearchDropdown.style.maxHeight =
        mobileResearchDropdown.scrollHeight + "px";
      researchChevron.style.transform = "rotate(180deg)";
    }
  });

  // Close mobile menu when clicking a link
  document.querySelectorAll("#mobileMenu a").forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu.classList.remove("open");
      menuIcon.classList.remove("hidden");
      closeIcon.classList.add("hidden");
    });
  });
</script>
